# ========================================
# Database Configuration
# ========================================
# Set to 'true' to use PostgreSQL database with Cron Job
# Set to 'false' to use real-time RSS only (no database needed)
USE_DATABASE=false

# Vercel Postgres에서 제공하는 pooled connection string (USE_DATABASE=true일 때만 필요)
DATABASE_URL="postgres://username:password@host:port/database?pgbouncer=true&connect_timeout=15"

# Vercel Postgres에서 제공하는 direct connection string (마이그레이션용, USE_DATABASE=true일 때만 필요)
DIRECT_URL="postgres://username:password@host:port/database"

# Environment
NODE_ENV="production"

# Cron Job Security (선택사항)
# Vercel Cron Job에서 API 호출 시 인증에 사용
CRON_SECRET="your-random-secret-key-here"

# ========================================
# AI 요약 기능 (v2.2.0+)
# ========================================
# 사용할 AI Provider (groq, openrouter, openai, gemini)
AI_PROVIDER="groq"

# Groq API 설정 (무료 권장)
# https://console.groq.com/keys 에서 발급
GROQ_API_KEY="gsk_xxxxxxxxxxxxx"
GROQ_MODEL="llama-3.3-70b-versatile"  # 선택사항, 기본값 사용 권장
GROQ_TEMPERATURE="0.3"                # 선택사항, 기본값 사용 권장

# OpenRouter API 설정 (Fallback용, 선택사항)
# https://openrouter.ai/keys 에서 발급
OPENROUTER_API_KEY="sk_or_xxxxxxxxxxxxx"
OPENROUTER_MODEL="meta-llama/llama-3.1-70b-instruct:free"
